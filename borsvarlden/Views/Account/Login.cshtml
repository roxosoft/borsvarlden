@model borsvarlden.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/login.css"/>
}

<div class="row">
    @using (Html.BeginForm(FormMethod.Post, new { @class = "col-6 offset-3" }))
    {
        @Html.AntiForgeryToken()

        <div class="card card-login">
            <div class="card-header">
                <h2>Login</h2>
            </div>
            <div class="card-body">
                <div class="form-group row">
                    <label class="col-form-label col-sm-3">Login:</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Login, new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Login)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-3">Password:</label>
                    <div class="col-sm-9">
                        @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-9 offset-sm-3">
                        @Html.CheckBoxFor(m => m.RememberMe, new {@class = "form-check-input", @checked = "checked"})
                        <label class="form-check-label">Remember me</label>
                    </div>
                </div>
            </div>

            @Html.ValidationSummary(true)

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Login</button>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    }
</div>

@section Scripts{ }