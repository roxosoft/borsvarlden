@using borsvarlden.ViewModels;
@model List<NewsViewModel>

<div class="latest">
    <span class="label latest-label">
        SENASTE
    </span>
    <div class="latest-articles-container">
        @foreach (var article in Model)
        {
            <div class="latest-article-wrapper">
                <a href="~/articlar/@Html.Raw(article.TittleSlug)" class="latest-article row">
                    <div class="latest-date col-2">
                        @(article.Date.Date == DateTime.Today ? article.Date.ToString("HH:mm") : article.Date.ToString("d MMM"))
                    </div>
                    <div class="latest-content col-10">
                        <p>
                            @article.Title
                        </p>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

