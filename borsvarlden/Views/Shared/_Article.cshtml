@using borsvarlden.ViewModels;
@model NewsViewModel;

<a href="~/articlar/@Html.Raw(Model.TittleSlug)">
    <div class="image-wrapper">
        @if (string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="~/assets/images/borsvarlden_logo_alternative_510x510.png">
        }
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="~/@Model.ImageUrl">
        }
    </div>
    <div class="article-content-wrapper">
        <span class="label article-label hidden-big">
            @Model.Label
        </span>
        <h3>
            @Model.Title
        </h3>
        <p class="hidden-small">
            <span class="label article-label">
                @Model.Label
            </span>
            <span class="article-content">
                @Html.Raw(Model.ShortNewsText)
            </span>
        </p>
    </div>
</a>
