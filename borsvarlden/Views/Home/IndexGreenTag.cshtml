@using borsvarlden.Helpers
@{
    ViewData["Title"] = "Börsvärlden - Maximera din digitala synlighet";
}

@section Styles{
    <link rel="stylesheet" href="~/css/index.min.css" />
    <link rel="stylesheet" href="~/css/article.min.css" />
    <link rel="stylesheet" href="~/css/bv-form.min.css" />
    <link rel="stylesheet" href="~/css/bv-widget-subscribe.min.css" />
    <link rel="stylesheet" href="~/css/bv-top-level.min.css" />
    <link rel="stylesheet" href="~/css/bv-panel.min.css" />
    <link rel="stylesheet" href="~/css/search-form.min.css" />
    <link rel="stylesheet" href="~/css/companies.min.css" />
    <link rel="stylesheet" href="https://borsvarlden-banners.azurewebsites.net/revslider/public/assets/css/settings.css" type="text/css" media="all" />
    <link rel="stylesheet" href="~/css/green-tag-index.min.css" />
}

@section ScriptsHead {
    <script type="text/javascript" src="https://borsvarlden-banners.azurewebsites.net/assets/js/includes/jquery/jquery.js"></script>
    <script type="text/javascript" src="https://borsvarlden-banners.azurewebsites.net/revslider/public/assets/js/jquery.themepunch.tools.min.js"></script>
    <script type="text/javascript" src="https://borsvarlden-banners.azurewebsites.net/revslider/public/assets/js/jquery.themepunch.revolution.min.js"></script>
}

<div class="index-row">
    <div class="greentag-index-title" style="text-align:center;">
        <img class="greentag-logo" src="~/assets/images/greentag-logo.jpg">
    </div>
    <div class="row index-content-row bv-container-page">
        <div class="col-xs-12 bv-content-left-4">
            <div class="label side-article-label">NYTT & INTRESSANT</div>
            @await Component.InvokeAsync("IndexGreenTagFeed")
        </div>
        <div class="col-xs-12 bv-content-greentag-col-2">
            <div class="label side-article-label">I FOKUS</div>
            @await Component.InvokeAsync("IndexNewsFeed")
        </div>
        <div class="col-xs-12 bv-content-greentag-col-3">
            <div class="label side-article-label">UR NYHETSFLÖDET</div>
            @await Component.InvokeAsync("IndexGreentagRight")
        </div>
        <div class="col-2 index-side-banner-wrapper visible-lg">
            @await Component.InvokeAsync("BannerRight")
            <div>
                @await Component.InvokeAsync("GreenTagCompanies")
            </div>
        </div>
    </div>

</div>

@section Scripts{ }
